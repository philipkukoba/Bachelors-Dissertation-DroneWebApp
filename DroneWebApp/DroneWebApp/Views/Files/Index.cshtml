@section scripts{
    <!-- scripts needed for upload progress bar -->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/jquery-form/form@4.2.2/dist/jquery.form.min.js" integrity="sha384-FzT3vTVGXqf7wRfy8k4BiyzvbNfeYjK+frTVqZeNDFl8woCbF0CYG6g2fMEFFo/i" crossorigin="anonymous"></script>

    <script type="text/javascript" src="~/Scripts/custom/fileUpload.js"></script>
}

@{
    ViewBag.Title = "File Upload";
}

<p></p>
<h2>File Upload</h2>

@if (@ViewBag.FileName != null && @ViewBag.Status)
{
    <div class="alert alert-success" role="alert">
        File <strong>@ViewBag.FileName</strong> has been successfully added to your Flight.<br />
        @Html.ActionLink("Back to Drone Flights List", "Index", "DroneFlights")
    </div>
}
else if (!@ViewBag.Status)
{
    <div class="alert alert-danger" role="alert">
        File <strong>@ViewBag.FileName</strong> already exists and has not been read.<br />
        @Html.ActionLink("Back to Drone Flights List", "Index", "DroneFlights")
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="btn-danger btn-sm" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

@if (@ViewBag.showInitialMessage)
{
    <h4>Please select the file you want to add to <strong>Flight @ViewBag.FlightId</strong> (<strong>@ViewBag.Location</strong>, <strong>@ViewBag.Date</strong>)</h4>
}

<div class="card" style="padding: 20px; width:auto">
    <form class="form-inline" method="post" enctype="multipart/form-data" id="Myform">
        <div class="form-group">
            <label for="InputFile">File:</label>
            <input type="file" class="form-control mx-sm-3" id="file" name="files">
        </div>
        <div id="uploadbtn" class="form-group">
            <input type="submit" value="Upload" class="btn btn-primary mx-sm-3">
        </div>
    </form>
</div>

<div id="uploadstatus"></div>
<div id="progressbar"></div>

<p>
    @Html.ActionLink("Back to Drone Flights List", "Index", "DroneFlights")
</p>

