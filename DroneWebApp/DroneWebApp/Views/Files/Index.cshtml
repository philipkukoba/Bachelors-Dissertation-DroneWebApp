@{
    ViewBag.Title = "File Upload";
}

<br />
<h2 class="textAlignCenter">File Upload</h2>
<br />

<div id="initialMessage">
    <h4>Please select the file you want to add to <strong>Flight @ViewBag.FlightId</strong> (<strong>@ViewBag.Location</strong>, <strong>@ViewBag.Date</strong>).</h4>
</div>
<br />

<div id="progressField" class="alert alert-info" hidden>
    Adding files to <strong>Flight @ViewBag.FlightId</strong> (<strong>@ViewBag.Location</strong>, <strong>@ViewBag.Date</strong>)<br/>
    <strong><span class="amtRead"></span></strong> out of <strong><span class="totalRead"></span></strong> files. Please wait...
</div>

<div id="successfullyAdded" class="alert alert-success" role="alert" hidden>
    <strong><span class="amtRead"></span></strong> out of <strong><span class="totalRead"></span></strong> files were read.
    Files <span id="fileNames"></span> have been successfully added to your Flight.<br />
    <div id="showNavigation">
        <br />
        @Html.ActionLink("Back to Drone Flight Details", "Details", "DroneFlights", new { id = @ViewBag.FlightId}, new { @class = "btn btn-primary btn-sm" }) |
        @Html.ActionLink("Back to Drone Flights List", "Index", "DroneFlights", null, new { @class = "btn btn-primary btn-sm" })
    </div>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="btn-danger btn-sm" role="alert">
        @ViewBag.ErrorMessage
    </div>
}


<div class="card paddingErrorIndex">
    <form class="form-inline" method="post" enctype="multipart/form-data" id="Myform">
        <div class="form-group">
            <label for="InputFile">File:</label>
            <input type="file" class="form-control mx-sm-3" id="file" name="files" multiple>
        </div>
        <div id="uploadbtn" class="form-group">
            <input type="submit" value="Upload" class="btn btn-success mx-sm-3">
        </div>
    </form>
</div>

<div id="uploadstatus"></div>
<div id="progressbar"></div>

<br />
<br />
<p>
    @Html.ActionLink("Back to Drone Flight Details", "Details", "DroneFlights", new { id = @ViewBag.FlightId}, new { @class = "btn btn-primary btn-sm" }) |
    @Html.ActionLink("Back to Drone Flights List", "Index", "DroneFlights", null, new { @class = "btn btn-primary btn-sm" })
</p>