@model DroneWebApp.Models.Pilot

@{
    ViewBag.Title = "Delete";
}

<br />
<h2>Delete Pilot: <font color='red'>@Model.PilotName</font></h2>

@if (@ViewBag.ErrorPilotDelete != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorPilotDelete
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        Are you sure you want to delete this <strong>pilot</strong>?
    </div>
}

<div>
    <hr />
    <table class="table table-bordered table-hover table-striped">
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <td>
                @Html.DisplayFor(model => model.PilotName)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayName("Total Flights")
            </th>

            <td>
                @Model.DroneFlights.Count
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>

            <td>
                @Html.DisplayFor(model => model.Street)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ZIP)
            </th>

            <td>
                @Html.DisplayFor(model => model.ZIP)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>

            <td>
                @Html.DisplayFor(model => model.City)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>

            <td>
                @Html.DisplayFor(model => model.Country)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>

            <td>
                @Html.DisplayFor(model => model.Phone)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayName("License No")
            </th>

            <td>
                @Html.DisplayFor(model => model.LicenseNo)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <td>
                @Html.DisplayFor(model => model.Email)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayName("Emergency Phone")
            </th>

            <td>
                @Html.DisplayFor(model => model.EmergencyPhone)
            </td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Pilots List", "Index")
        </div>
    }
</div>
