@model IEnumerable<DroneWebApp.Models.DroneFlight>

@{
    ViewBag.Title = "Drone Flight Index";
}

<br />
<h2>Drone Flights Index</h2>

<h4>@Html.ActionLink("Create new Flight", "Create", "", new { @class = "btn-info btn-lg", style = "color:white; text-decoration:none;" })</h4>

<table id="dftable" class="ui celled table table-hover table-striped" cellspacing="0" width="100%" style="text-align: center">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Flight Id")
            </th>
            <th>
                @Html.DisplayName("Location")
            </th>
            <th>
                @Html.DisplayName("Date")
            </th>
            <th>
                @Html.DisplayName("Drone")
            </th>
            <th>
                @Html.DisplayName("Pilot")
            </th>
            <th></th>
            <th>Files</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @item.Date.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Drone.DroneName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pilot.PilotName)
                </td>
                <td>
                    @if (!item.hasQR)
                    {
                        @Html.ActionLink("QR", "QualityReport", new { id = item.FlightId }, new { @class = "btn btn-danger btn-sm", style = "color: white" })
                    }
                    else
                    {
                        @Html.ActionLink("QR", "QualityReport", new { id = item.FlightId }, new { @class = "btn btn-success btn-sm", style = "color: white" })
                    }
                    @if (!item.hasGCPs)
                    {
                        @Html.ActionLink("GCP", "GCPPoints", new { id = item.FlightId }, new { @class = "btn btn-danger btn-sm", style = "color: white" })
                    }
                    else
                    {
                        @Html.ActionLink("GCP", "GCPPoints", new { id = item.FlightId }, new { @class = "btn btn-success btn-sm", style = "color: white" })
                    }
                    @if (!item.hasGCPs)
                    {
                        @Html.ActionLink("CTRL", "CTRLPoints", new { id = item.FlightId }, new { @class = "btn btn-danger btn-sm", style = "color: white" })
                    }
                    else
                    {
                        @Html.ActionLink("CTRL", "CTRLPoints", new { id = item.FlightId }, new { @class = "btn btn-success btn-sm", style = "color: white" })
                    }
                    @if (!item.hasTFW)
                    {
                        @Html.ActionLink("TFW", "TFW", new { id = item.FlightId }, new { @class = "btn btn-danger btn-sm", style = "color: white" })
                    }
                    else
                    {
                        @Html.ActionLink("TFW", "TFW", new { id = item.FlightId }, new { @class = "btn btn-success btn-sm", style = "color: white" })
                    }
                    <br />
                    <p></p>
                    @if (!item.hasXYZ)
                    {
                        <div class="btn btn-danger btn-sm disabled">
                            <span>
                                XYZ
                            </span>
                        </div>
                    }
                    else
                    {
                        <div class="btn btn-success btn-sm disabled">
                            <span>
                                XYZ
                            </span>
                        </div>
                    }
                    @if (item.DroneLogEntries.Count == 0)
                    {
                        <div class="btn btn-danger btn-sm disabled">
                            <span>
                                Drone Log
                            </span>
                        </div>
                    }
                    else
                    {
                        <div class="btn btn-success btn-sm disabled">
                            <span>
                                Drone Log
                            </span>
                        </div>
                    }
                </td>
                <td>
                    @Html.ActionLink("Upload File", "Index", "Files", new { id = item.FlightId }, new { @class = "btn btn-info btn-sm", style = "color: white" })
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.FlightId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.FlightId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.FlightId })
                </td>
            </tr>
        }
    </tbody>
</table>
