@model DroneWebApp.Models.Drone

@{
    ViewBag.Title = "Delete Drone";
}

<br />
<h2>Delete Drone: @Model.DroneName</h2>

<h3>Are you sure you want to delete this <strong>Drone</strong>?</h3>
@if (@ViewBag.ErrorDroneDelete != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorDroneDelete
    </div>
}
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DroneName)
        </dd>

        <dt>
            @Html.DisplayName("Drone Type")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DroneType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Registration)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Registration)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
