@{
    ViewBag.Title = "Upload a Drone Flight";
}

@*To support file upload set the form element enctype="multipart/form-data" *@

<h1>
    Please enter the following information about the drone flight:
</h1>
<br />

<form enctype="multipart/form-data" asp-controller="home" asp-action="create"
      method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Location" class="col-sm-2 col-form-label">Location: </label>
        <div class="col-sm-10">
            <input asp-for="Location" class="form-control" placeholder="Location of Drone Flight">
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label"> Date: </label>
        <div class="col-sm-10">
            <input type="date" asp-for="Date" class="form-control">
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Pilot" class="col-sm-2 col-form-label">Pilot: </label>
        <div class="col-sm-10">
            <input asp-for="Pilot" class="form-control" placeholder="Pilot name">
            <span asp-validation-for="Pilot" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label for="exampleFormControlFile1">Upload a file:</label>
        <input type="file" class="form-control-file" id="examSolvepleFormControlFile1">
    </div>

    <!-- add multiple choose file/ add another?-->

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create Flight</button>
        </div>
    </div>
</form>


